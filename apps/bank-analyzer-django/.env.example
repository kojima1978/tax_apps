# ==============================================================================
# Bank Analyzer Django - Environment Configuration
# ==============================================================================
# Copy this file to .env and update the values for your environment
# ==============================================================================

# Django Settings
# ----------------
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# Set to False in production
DJANGO_DEBUG=False

# Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF trusted origins (Nginx等のリバースプロキシ経由時に必要)
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# サブパス配下に配置する場合（例: /bank-analyzer）
# DJANGO_FORCE_SCRIPT_NAME=/bank-analyzer

# Timezone
TZ=Asia/Tokyo

# Database Settings
# -----------------
# Database engine: 'sqlite' or 'postgresql'
DB_ENGINE=postgresql

# PostgreSQL settings (when DB_ENGINE=postgresql)
DB_NAME=bank_analyzer
DB_USER=bankuser
DB_PASSWORD=change-this-password-in-production
DB_HOST=bank-analyzer-db
DB_PORT=5432

# Legacy SQLite path (when DB_ENGINE=sqlite)
SQLITE_PATH=/app/db/db.sqlite3

# AI Classification Settings
# ---------------------------
# Fuzzy matching threshold (0-100, default: 90)
FUZZY_THRESHOLD=90

# Enable fuzzy matching (true/false)
FUZZY_ENABLED=true

# Gunicorn Settings
# -----------------
# Number of worker processes (recommended: 2 * CPU cores + 1)
GUNICORN_WORKERS=2

# Worker timeout in seconds
GUNICORN_TIMEOUT=300
