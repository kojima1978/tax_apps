# Application Settings
APP_NAME=Passbook OCR Pro
VERSION=3.1.0
DEBUG=False

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/passbook.db

# OCR Settings - PP-OCRv5 (PaddleOCR 3.3.x)
OCR_USE_GPU=True
OCR_GPU_MEM=8000  # 8GB for RTX 3060 (12GB VRAM)
OCR_LANG=ch  # PP-OCRv5 unified model (Chinese-Japanese-English)
OCR_REC_BATCH_NUM=6  # Optimal for RTX 3060
OCR_USE_ANGLE_CLS=True
OCR_USE_SPACE_CHAR=True
OCR_DROP_SCORE=0.3
OCR_USE_MP=True
OCR_TOTAL_PROCESS_NUM=2
OCR_PRECISION=fp16  # Mixed precision for faster inference

# Image Processing
MAX_IMAGE_DIMENSION=2000
PREPROCESSING_QUALITY=95

# Advanced Layout Analysis (Phase 2)
USE_LAYOUT_ANALYSIS=False
LAYOUT_ENGINE=paddleocr_vl  # or 'yomitoku'

# Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.bmp,.tiff

# Validation
ENABLE_BALANCE_VALIDATION=True
BALANCE_TOLERANCE=1.0  # Allow Â±1 yen difference

# Learning System
ENABLE_PATTERN_LEARNING=True
MIN_CORRECTION_CONFIDENCE=0.7
