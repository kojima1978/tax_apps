# ============================================
# Tax Apps - Environment Configuration
# ============================================
# Copy this file to .env and set your values
# cp .env.example .env
# ============================================

# ===========================================
# PostgreSQL (相続税案件管理システム用)
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=inheritance_tax_db

# ===========================================
# Django (銀行分析システム用)
# ===========================================
# 本番環境では必ず変更してください
DJANGO_SECRET_KEY=dev-secret-key-change-in-production
# 本番環境では False に設定
DJANGO_DEBUG=True
# 本番環境ではドメインを追加してください (例: example.com,localhost,bank-analyzer)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,bank-analyzer

# ===========================================
# 相続税案件管理システム (ITCM) 追加設定
# ===========================================
# PostgreSQLの外部ポート（デフォルト: 3022）
# DB_PORT=3022
# APIログレベル
LOG_LEVEL=info
# フロントエンドURL（CORS設定用）
FRONTEND_URL=http://localhost:3020
# フロントエンドからAPI接続先（ビルド時に埋め込み）
NEXT_PUBLIC_API_URL=/itcm-api/api

# ===========================================
# 共通設定
# ===========================================
# タイムゾーン
TZ=Asia/Tokyo
